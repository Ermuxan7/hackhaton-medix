generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role

  patients     Patient[]    @relation("DoctorPatients")
  labRequests  LabRequest[] @relation("DoctorRequests")
}

model Patient {
  id       Int      @id @default(autoincrement())
  fullName     String
  phone    String
  age Int
  address String
  medicHistory String
  content String
  doctorId Int
  doctor   User      @relation("DoctorPatients", fields: [doctorId], references: [id])  
  labRequests LabRequest[]
}

model LabRequest {
  id        Int      @id @default(autoincrement())
  status    Status   @default(PENDING)
  drugName String
  dose String
  receptionFrequency String
  continuity String
  addition String?
  patientId Int
  patient   Patient   @relation(fields: [patientId], references: [id])
  doctorId  Int
  doctor    User      @relation("DoctorRequests", fields: [doctorId], references: [id])
}

enum Role {
  DOCTOR
  LAB
  ADMIN
  PATIENT
}

enum Status {
  PENDING
  DONE
}
